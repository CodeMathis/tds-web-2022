}



header{
	margin: auto 10%;
	position: -webkit-sticky; /* Safari */
	position: sticky;
	top: 0;
}

li a{
	display: inline-flex;
	color: white;
	padding: 30px 10px 0px 10px;
	text-decoration: none;
	float: right;
}

li a:hover{
	color: #80cacc;
	transition: color .5s ease;
}

header hr{
	height: 2px;
	background-color: white;
	border: none;
}

ul{
	list-style-type: none;
	margin: 30px 0 0 0;
	overflow: hidden;
}

.menu li:nth-child(1) a{
	margin-left: -40px;
	float: left;
	color: #80cacc;
	font-weight: bold;
}

.menu li:nth-child(1) a:hover {
	color: white;
}



.test:nth-child(even):before{
	content: counter(section);
	right: 90%; 
	margin: 512px -30px;
	position: absolute;
	border-radius: 50%;
	padding: 10px;
	height: 35px;
	width: 35px;
	background-color: blue;
	text-align:center;
	color: white;
	font-size: 110%;
}

.test:nth-child(odd):before{
	content: counter(section);
	left: 90%; 
    margin: 512px -30px;
    position: absolute;
    border-radius: 50%;
    padding: 10px;
    height: 35px;
	width: 35px;
    background-color: blue;
    text-align:center;
    color: white;
    font-size: 110%;
}

.test:nth-child(even) {
    border-left: 4px solid;
    border-bottom-left-radius: 30px;
	border-top-left-radius: 30px;
}

.test:nth-child(odd) {
    border-right: 4px solid;
    border-bottom-right-radius: 30px;
    border-top-right-radius: 30px;	
}

